<div class="center-align">
  <div class="hoverable">
    <div class="z-depth-3">
      <h1 class="card-panel #388e3c purple darken-2">Artists</h1>
    </div>
  </div>
</div>
<div class="div-container">
<%= link_to "New Artist", new_artist_path, class: "btn blue" %>
<%= link_to "Back to Billboards", billboards_path, class: "btn blue" %>
</div>
<br>
<br>
<% @artists.each do |artist| %>
  <div class="center-align">
    <div class="card-panel hoverable">
      <h6><%= link_to artist.name, artist_path(artist) %></h6>
    </div>
  </div>
  <br>
  <br>
  <div class="div-container">
  <%= link_to "Delete this Artist", artist, method: :delete, class: "btn blue" %>
  <%= link_to "Edit this Artist", edit_artist_path(artist), class: "btn blue" %>
  </div>



  <% end %>